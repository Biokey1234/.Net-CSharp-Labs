@model Assignment2.Models.Deal

@{
    ViewData["Title"] = "Delete Deal";
}

<h2>Delete Deal</h2>

<div>
    <p>Are you sure you want to delete this deal?</p>

    <img src="~/@Model.ImagePath" alt="Deal Image" width="300" />

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-id="@Model.FoodDeliveryServiceId">Cancel</a>
    </form>
</div>

